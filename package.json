{
  "name": "cryptify",
  "packageManager": "yarn@3.2.3",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client:start:dev": "yarn workspace @cryptify/client start",
    "client:test:unit": "yarn workspace @cryptify/client test:unit",
    "api:dev": "yarn workspace @cryptify/api start:dev",
    "api:test:unit": "yarn workspace @cryptify/api test:unit",
    "api:test:integration": "yarn workspace @cryptify/api test:integration",
    "eth-edge:dev": "yarn workspace @cryptify/eth-edge start:dev",
    "eth-edge:test:unit": "yarn workspace @cryptify/eth-edge test:unit",
    "eth-edge:test:integration": "yarn workspace @cryptify/eth-edge test:integration",
    "common:build": "yarn workspace @cryptify/common build",
    "lint:check": "eslint '*/**/*.{js,jsx,ts,tsx,json}' --max-warnings=0",
    "lint:fix": "eslint '*/**/*.{js,jsx,ts,tsx,json}' --fix",
    "docs:diagrams:build": "yarn workspace @cryptify/docs diagrams:build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.5.1"
  }
}
